// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id String @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  // Place here you untranslatable columns
  stock Int 
  //

  translations ProductTranslation[]
}

model ProductTranslation {
  id String @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  // Place here you translatable columns
  name String 
  description String 
  //

  parentModel Product @relation(fields: [parentModelId], references: [id], onDelete: Cascade) 
  parentModelId String @db.Uuid
  language Language @relation(fields: [languageId], references: [code], onUpdate: Cascade, onDelete: Restrict)
  languageId String

}

model Language {
  code String @id
  name String
  nameInNativeLanguage String
  dateFormat String
  currency String
  translations ProductTranslation[]
}




